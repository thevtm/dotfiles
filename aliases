###########
# Aliases #
###########

# Make
alias m='make'

# Trash-CLI
alias t='trash-put'

# Kill process using fuzzy selector
fkill () {
  ps aux | fzy | awk '{ print $2 }' | xargs kill
}

# Git fuzzy switch branches
fgc () {
  git checkout $(git branch | fzy)
}

# Serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'
